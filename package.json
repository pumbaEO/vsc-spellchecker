{
    "name": "title-case-spellchecker",
    "displayName": "TitleCase SpellChecker",
    "description": "TitleCase off-line spellchecker",
    "icon": "icon.png",
    "version": "0.1.8",
    "publisher": "silverbulleters",
    "license": "SEE LICENSE IN LICENSE.md",
    "engines": {
        "vscode": "^1.9.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/silverbulleters/vsc-spellchecker.git"
    },
    "categories": [
        "Other",
        "Linters"
    ],
    "activationEvents": [
        "*",
        "onCommand:vsc-spellchecker.currentSpell",
        "onCommand:vsc-spellchecker.languageChange"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "commands": [
            {
                "command": "vsc-spellchecker.currentSpell",
                "title": "Check the spelling of the current file",
                "category": "TitleCase SpellChecker"
            },
            {
                "command": "vsc-spellchecker.languageChange",
                "title": "Change language of spelling",
                "category": "TitleCase SpellChecker"
            }
        ],
        "keybindings":[
            {
                "command": "editor.action.quickFix",
                "key": "Alt+."
            }
        ],
        "configuration": {
            "title": "TitleCase Spellchecker configuration",
            "properties": {
                "vsc-spellchecker.dictionariesUrl":{
                    "description": "Url to download dictionaries",
                    "type":"string",
                    "default": "https://github.com/wooorm/dictionaries/archive/master.zip"
                },
                "vsc-spellchecker.dictionariesRootPath":{
                    "description": "Path to local dictionaries to decompres, default extesinons path",
                    "type":"string",
                    "default":""
                },
                "vsc-spellchecker.language":{
                    "description": "language arrays",
                    "type": "array",
                    "default": ["uk_UA", "ru_RU", "en_US"]
                },
                "vsc-spellchecker.languageIDs":{
                    "description": "language id",
                    "type":"array",
                    "default":["markdown","plaintext","feature"]
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.1.6",
        "vscode": "^1.0.3",
        "mocha": "^3.2.0",
        "@types/node": "^7.0.5",
        "@types/mocha": "^2.2.39"
    },
    "dependencies": {
        "hunspell-spellchecker": "^1.0.2",
        "http-proxy-agent": "^1.0.0",
        "https-proxy-agent": "^1.0.0",
        "tmp" : "^0.0.31",
        "decompress": "^4.0.0",
        "progress-stream": "^1.2.0",
        "path-exists":"^3.0.0",
        "expand-home-dir":"^0.0.3",
        "glob":"^7.1.1"
    }
}